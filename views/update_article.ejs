<% include partials/header %>
<div class="container">
	<div>
		<h1>Update an Article</h1>
	</div>
	<form action="/articles/update/<%=article._id %>" method="POST">
		<div class="form-group">
			<label for="title">Title</label>
			<input
				type="text"
				class="form-control"
				id="title"
				name="title"
				placeholder="Enter a Title"
				required
				value="<%=article.title%>"
			/>
		</div>

		<div class="form-group">
			<label for="description">Body</label>
			<textarea
				type="text"
				class="form-control"
				id="description"
				name="description"
				placeholder="Write a description"
				required
				rows="7"
			> <%= article.description %></textarea>
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>


<% include partials/footer %>