<% include partials/header %>

<div class="jumbotron jumbotron-fluid text-center">
	<h1>Update your comment  <%= user.name %></h1>
</div>
<div class="container">
	<form action="/article/<%=artId%>/comment/<%= comment._id %>/update" method="POST" class="form-group ">
		
		<textarea type="text" name="comment[comment]" class="form-control m-2" rows="3"><%=comment.comment %> </textarea>
		<input type="submit" class="form-control btn btn-primary m-2" />
	</form>
</div>
<% include partials/footer %>